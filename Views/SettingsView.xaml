<Page x:Class="JuanNotTheHuman.Spending.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JuanNotTheHuman.Spending.Views" xmlns:viewmodels="clr-namespace:JuanNotTheHuman.Spending.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsView">
    <Page.DataContext>
        <viewmodels:SettingsViewViewModel/>
    </Page.DataContext>
    <StackPanel>
        <TextBlock Text="{Binding Path=[SettingsTitle],Source={StaticResource Localization}}" FontSize="24" Margin="10"/>
        <DockPanel Margin="10,0,0,10">
            <TextBlock Text="{Binding Path=[SettingsCurrencyText],Source={StaticResource Localization}}"/>
            <TextBlock Text="{Binding Path=[SettingsCurrencyInfo],Source={StaticResource Localization}}" FontSize="10"/>
        </DockPanel>
        <ComboBox ItemsSource="{Binding Currencies}"
                  SelectedItem="{Binding SelectedCurrency,UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left" Margin="10,0,0,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding ISOCurrencySymbol}"/>
                        <TextBlock Text="{Binding Country,StringFormat=' - {0}'}"/>
                    </DockPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <DockPanel Margin="10,10,0,10">
            <TextBlock Text="{Binding Path=[ImportDatabaseText],Source={StaticResource Localization}}"/>
            <Button Margin="10,0,0,0" Content="{Binding Path=[ImportDatabaseButton],Source={StaticResource Localization}}"
                Command="{Binding ImportDatabaseCommand}" HorizontalAlignment="Left"/>
        </DockPanel>
        <DockPanel Margin="10,10,0,10">
            <TextBlock Text="{Binding Path=[ExportDatabaseText],Source={StaticResource Localization}}"/>
            <Button Margin="10,0,0,0" Content="{Binding Path=[ExportDatabaseButton],Source={StaticResource Localization}}"
                Command="{Binding ExportDatabaseCommand}" HorizontalAlignment="Left"/>
        </DockPanel>
        <DockPanel Margin="10,10,0,10">
            <TextBlock Text="{Binding Path=[ClearDatabaseText],Source={StaticResource Localization}}"/>
            <Button Margin="10,0,0,0" Content="{Binding Path=[ClearDatabaseButton],Source={StaticResource Localization}}"
                Command="{Binding ClearDatabaseCommand}" HorizontalAlignment="Left"/>
        </DockPanel>
        <Button Content="{Binding Path=[ButtonBack],Source={StaticResource Localization}}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Command="{Binding BackCommand}"/>
    </StackPanel>
</Page>
